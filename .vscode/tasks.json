{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    // for this build task to work, your cwd must be the folder enclosing thisone, the base repo, or they will fail.
    // you also will need to pip install jupyter-book and ghp-import
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-import",
            "type": "shell",
            "command": ".vscode\\build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}